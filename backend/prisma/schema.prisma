generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Chiefdom {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[]
  faults Fault[]
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  fullName  String
  email     String?  @unique
  phone     String?
  role      String
  chiefdom    Chiefdom? @relation(fields: [chiefdomId], references: [id])
  chiefdomId  Int?
  faultsReported Fault[] @relation("ReportedFaults")
  faultsAssigned Fault[] @relation("AssignedFaults")
}

model Fault {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  status      String   @default("open")
  reportedBy  User     @relation("ReportedFaults", fields: [reportedById], references: [id])
  reportedById Int
  assignedTo  User?    @relation("AssignedFaults", fields: [assignedToId], references: [id])
  assignedToId Int?
  chiefdom    Chiefdom? @relation(fields: [chiefdomId], references: [id])
  chiefdomId  Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
