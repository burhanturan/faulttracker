generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Region {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String?
  projects    Project[]
}

model Project {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  regionId    Int?
  region      Region?  @relation(fields: [regionId], references: [id])
  chiefdoms   Chiefdom[]
}

model Chiefdom {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  startKm   String?
  endKm     String?
  projectId Int?
  project   Project? @relation(fields: [projectId], references: [id])
  faults    Fault[]
  users     User[]

  stations          Station[]
  levelCrossings    LevelCrossing[]
  technicalBuildings TechnicalBuilding[]
}

model Station {
  id         Int      @id @default(autoincrement())
  name       String
  km         String?
  chiefdomId Int
  chiefdom   Chiefdom @relation(fields: [chiefdomId], references: [id], onDelete: Cascade)
}

model LevelCrossing {
  id         Int      @id @default(autoincrement())
  name       String
  km         String?
  type       String?  // Bariyerli, Otomatik vb.
  chiefdomId Int
  chiefdom   Chiefdom @relation(fields: [chiefdomId], references: [id], onDelete: Cascade)
}

model TechnicalBuilding {
  id         Int      @id @default(autoincrement())
  name       String
  km         String?
  type       String?  // OBS, Teknik Merkez vb.
  chiefdomId Int
  chiefdom   Chiefdom @relation(fields: [chiefdomId], references: [id], onDelete: Cascade)
}

model User {
  id             Int       @id @default(autoincrement())
  username       String    @unique
  password       String
  fullName       String
  role           String
  chiefdomId     Int?
  email          String?   @unique
  phone          String?
  faultsAssigned Fault[]   @relation("AssignedFaults")
  faultsReported Fault[]   @relation("ReportedFaults")
  chiefdom       Chiefdom? @relation(fields: [chiefdomId], references: [id])
}

model Fault {
  id           Int       @id @default(autoincrement())
  title        String
  description  String
  status       String    @default("open")
  reportedById Int
  assignedToId Int?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  chiefdomId   Int?
  assignedTo   User?     @relation("AssignedFaults", fields: [assignedToId], references: [id])
  chiefdom     Chiefdom? @relation(fields: [chiefdomId], references: [id])
  reportedBy   User      @relation("ReportedFaults", fields: [reportedById], references: [id])
  // Closure Details
  faultDate       String?
  faultTime       String?
  reporterName    String?
  lineInfo        String?
  closureFaultInfo String?
  solution        String?
  workingPersonnel String?
  tcddPersonnel   String?
  images          FaultImage[]
}

model FaultImage {
  id        Int      @id @default(autoincrement())
  url       String
  faultId   Int
  fault     Fault    @relation(fields: [faultId], references: [id])
  createdAt DateTime @default(now())
}
