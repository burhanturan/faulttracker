generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  chiefdoms Chiefdom[]
}

model Chiefdom {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  projectId Int?
  project   Project? @relation(fields: [projectId], references: [id])
  faults    Fault[]
  users     User[]
}

model User {
  id             Int       @id @default(autoincrement())
  username       String    @unique
  password       String
  fullName       String
  role           String
  chiefdomId     Int?
  email          String?   @unique
  phone          String?
  faultsAssigned Fault[]   @relation("AssignedFaults")
  faultsReported Fault[]   @relation("ReportedFaults")
  chiefdom       Chiefdom? @relation(fields: [chiefdomId], references: [id])
}

model Fault {
  id           Int       @id @default(autoincrement())
  title        String
  description  String
  status       String    @default("open")
  reportedById Int
  assignedToId Int?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  chiefdomId   Int?
  assignedTo   User?     @relation("AssignedFaults", fields: [assignedToId], references: [id])
  chiefdom     Chiefdom? @relation(fields: [chiefdomId], references: [id])
  reportedBy   User      @relation("ReportedFaults", fields: [reportedById], references: [id])
  // Closure Details
  faultDate       String?
  faultTime       String?
  reporterName    String?
  lineInfo        String?
  closureFaultInfo String?
  solution        String?
  workingPersonnel String?
  tcddPersonnel   String?
  images          FaultImage[]
}

model FaultImage {
  id        Int      @id @default(autoincrement())
  url       String
  faultId   Int
  fault     Fault    @relation(fields: [faultId], references: [id])
  createdAt DateTime @default(now())
}
